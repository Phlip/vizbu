<% @title = @q + " - Vizbu" %>

<div class="row">
  <div class="span2">
    <a href="/" class="logo-link"><%= image_tag "logo.png", :class => "small-logo" %></a>
  </div>
  <div class="span10" style="padding:20px 0;">
    <%= render "search_form" %>
  </div>
  <div class="span12" style="">
    <ul id="search-nav" class="nav nav-tabs">
      <% ["youtube", "vimeo", "soundcloud"].each do |source| %>
        <li class="<%= if source.to_sym == @source then "active" end %>">
          <%= link_to image_tag("#{ source }.ico", :class => "search-icon") + " " + source.humanize, remove_filters(params).merge({ :q => @q, :source => source, :page => nil }) %>
        </li>
      <% end %>
    </ul>
  </div>
  <div id="full-result-container">
    <div class="span10">
      <span class="results-for">Search results for <span><%= @q %></span></span>
    </div>
    <div class="span2">
      <span class="total-results pull-right" style="margin-right:">About <b><%= number_with_delimiter(@result[:total_videos], :delimiter => ',')  %></b> results</span>
    </div>
    <div class="span12">
      <hr style="margin-top:10px;margin-bottom:5px;" />
        <div id="filter" class="btn-group" style="display:inline-block;float:left;">
          <a class="btn dropdown-toggle " href="#">
            Filter
            <span class="caret"></span>
          </a>
        </div>
        <h3 style="display:inline-block;float:left;padding-left:10px;">
          View : 
          <%= if ( @view == "list" ) then "List" else link_to "List", params.merge({ :view => "list" }) end %> |
          <%= if ( @view == "grid" ) then "Grid" else link_to "Grid", params.merge({ :view => "grid" }) end %>
        </h3>
        <div class="clear"></div>
        <div class="filter-options" style="display:none;">
          <% ( @filters[@source.to_sym] || [] ).each do |k, v| %>
            <div class="span2">
              <h4><%= k.to_s.humanize %> : </h4>
              <% first_filter = true %>
              <% v.each do |filter, condition| %>
                <% if params[k] == filter.to_s || ( params[k].blank? && first_filter ) %>
                  <b><%= link_to filter.to_s.humanize, params.merge(k => filter, :page => nil) %></b><br />
                <% else %>
                  <%= link_to filter.to_s.humanize, params.merge(k => filter, :page => nil) %><br />
                <% end %>
                <% first_filter = false %>
              <% end %>
            </div>
          <% end %>
          <div class="clear"></div>
        </div>
      <hr style="margin-top:5px;margin-bottom:5px;" />
    </div>
      <% if @result[:videos].empty? %>
        <div class="span12">
          <br />
          <h3>No results found. Try searching something else.</h3>
          <br />
        </div>
      <% else %>
        <% @result[:videos].each_with_index do |video, index| %>
          <%= render "result_#{@view}", :video => video, :index => index %>
        <% end %>
      <% end %>
  </div>
</div>
<br/>

<%=
 render "pagination", :result => @result
%>
